# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
DEFAULT_MODEL=o3

# LangSmith Observability (Required)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=planner-bot

# OTLP Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=planner-bot
OTEL_SERVICE_VERSION=1.0.0

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# AWS Configuration (Production)
AWS_REGION=us-east-1
AWS_CLOUDWATCH_LOG_GROUP=/aws/apprunner/planner-bot

# For production deployment
PORT=8000
HOST=0.0.0.0

# Legacy configurations (kept for compatibility)
DEBUG=true
MEMORY_DIR=app/memory
MAX_PROJECT_SIZE_MB=10
SECRET_KEY=your-secret-key-for-production
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000